<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="NavigationTabShowCase.App"
             xmlns:local="using:NavigationTabShowCase"
			 xmlns:iconPacks="https://github.com/MahApps/IconPacks.Avalonia"
			 xmlns:themes="clr-namespace:Material.Styles.Themes;assembly=Material.Styles"
             RequestedThemeVariant="Default">

	<Application.DataTemplates>
		<local:ViewLocator/>
	</Application.DataTemplates>
	<Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<!-- BundledTheme как отдельный ресурс -->
				<themes:BundledTheme BaseTheme="Dark" PrimaryColor="Teal" SecondaryColor="Amber"/>
				<!-- СЛИТЫЕ словари (только другие ResourceDictionary) -->
				<ResourceInclude Source="/Theme/NavigationActionStrip.axaml"/>
				<ResourceInclude Source="/Theme/NavigationActionStripItem.axaml"/>
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Application.Resources>
	<Application.Styles>
		<SimpleTheme/>
		<StyleInclude Source="avares://MsBox.Avalonia/Controls/MarkdownView.axaml"/>
	</Application.Styles>
</Application>
